execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_1=true}] run data modify storage gm4_guidebook:temp insert[2] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"A Zauber Cauldron is created by holding an enchanted book while standing near a water-filled cauldron over fire (soul fire and campfires work as well).\\nThe cauldron will begin to give off steam, indicating the newly formed Zauber Cauldron is ready for use."},{"translate":"text.gm4.guidebook.zauber_cauldrons.2"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_2=true}] run data modify storage gm4_guidebook:temp insert[3] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Zauber Cauldron recipes are performed by dropping items into the water-filled cauldron.\\n\\nTo assist in the process, a player looking at a Zauber Cauldron will be unable to pick up items inside the cauldron until they look away."},{"translate":"text.gm4.guidebook.zauber_cauldrons.3"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_3=true}] run data modify storage gm4_guidebook:temp insert[4] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Powerful tier IV potions can be created by dropping a tier II potion, prismarine crystals, and golden apple into the cauldron. There are some side effects when creating the tier IV potions.\\n\\nUsing soul fire will give potions 9 uses."},{"translate":"text.gm4.guidebook.zauber_cauldrons.4"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_3=true}] run data modify storage gm4_guidebook:temp insert[5] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Splash and Lingering potions create an excess of heat and will explode if used in a tier IV potion recipe.\\n\\nUsing a snow powder cauldron will absorb the heat and successfully create a splash or lingering tier IV potion."},{"translate":"text.gm4.guidebook.zauber_cauldrons.5"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_5=true}] run data modify storage gm4_guidebook:temp insert[6] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"An enchanted prismarine shard can be created by dropping a prismarine shard in the cauldron while standing nearby with 30 experience levels, consuming the levels from the nearest player.\\n\\nThe shard is used to upgrade armour and as a way to get Luck."},{"translate":"text.gm4.guidebook.zauber_cauldrons.6"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_6=true}] run data modify storage gm4_guidebook:temp insert[7] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Zauber armour can be made with a piece of gold armour, an enchanted prismarine shard and a modifier item, shown below.\\nGilstering Melon:\\n  +6 health\\nBlaze Powder:\\n  +35% Attack Damage\\nSugar:\\n  +12% Speed\\nTurtle Helmet:\\n  +1 Armour"},{"translate":"text.gm4.guidebook.zauber_cauldrons.7"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_6=true}] run data modify storage gm4_guidebook:temp insert[8] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Zauber armour has about a 55% increase in defense compared to normal gold armour. Each piece of Zauber Armour also has an Armour Toughness of 3.\\n\\nAdditionally wearing a full set, buffs each modifier."},{"translate":"text.gm4.guidebook.zauber_cauldrons.8"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_8=true}] run data modify storage gm4_guidebook:temp insert[9] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Zauber crystals can be created with a sea lantern, nether star and tier IV potion. Crystals only function in the offhand of a player with the luck effect.\\n\\nThrowing lucky flowers, an enchanted shard, and cut grass into the cauldron will grant the Luck effect. "},{"translate":"text.gm4.guidebook.zauber_cauldrons.9"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_9=true}] run data modify storage gm4_guidebook:temp insert[10] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Each world has a different set of \'lucky\' and \'poisonous flowers\'. Each of the twelve small flowers fall under one of those categories.\\n\\nThese flowers are used for the Luck recipe, which grants the nearest player with Luck until death."},{"translate":"text.gm4.guidebook.zauber_cauldrons.10"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_9=true}] run data modify storage gm4_guidebook:temp insert[11] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"If some of the lucky flowers are missing from the Luck recipe, then nothing will happen and the ingredients can be retrieved.\\n\\nHowever, if a poisonous flower is added to the recipe, the cauldron will instead emit a poisonous cloud."},{"translate":"text.gm4.guidebook.zauber_cauldrons.11"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_11=true}] run data modify storage gm4_guidebook:temp insert[12] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Any extra ingredients added to a Zauber recipe will leave the cauldron as Possessed Items, weaponless vexes.\\nIf a glass bottle is added, it will capture Possessed Items in groups of three, forming Magic in a Bottle. If left on the ground, the bottle will release the vexes."},{"translate":"text.gm4.guidebook.zauber_cauldrons.12"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_12=true}] run data modify storage gm4_guidebook:temp insert[13] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Throwing an Enchanted Shard, Magic in a Bottle, and some quantity of both Chorus Fruit and Popped Chorus Fruit will create a Wormhole in a Bottle.\\nThe destination of the wormhole will match the location where the vexes contained within the Magic in a Bottle were caught."},{"translate":"text.gm4.guidebook.zauber_cauldrons.13"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_12=true}] run data modify storage gm4_guidebook:temp insert[14] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"Wormholes explode when the drinker reaches their destination, damaging surrounding blocks but not harming the player. If the player ends up in a cauldron, there no is explosion. Too few chorus will result in blurry wormholes, teleporting the player to random nearby location."},{"translate":"text.gm4.guidebook.zauber_cauldrons.14"}]}]'
execute if entity @s[advancements={gm4_guidebook:zauber_cauldrons/page_12=true}] run data modify storage gm4_guidebook:temp insert[15] set value '["",{"translate":"%1$s%3427655$s","with":[{"text":"If too many chorus or popped chorus are used, the excess fruit will transform into possessed items, but produce a precise wormhole.\\n\\nThe precise amount of fruit is different for each world, and requires experiments with blurry wormholes and possessed items."},{"translate":"text.gm4.guidebook.zauber_cauldrons.15"}]}]'
