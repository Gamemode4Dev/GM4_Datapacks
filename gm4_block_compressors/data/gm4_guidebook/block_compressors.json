{
  "id": "block_compressors",
  "name": "Block Compressors",
  "module_type": "module",
  "icon": {
    "item": "minecraft:piston",
    "nbt": "{CustomModelData:3420005}"
  },
  "criteria": {
    "create_custom_crafter": {
      "trigger": "minecraft:tick",
      "conditions": {
        "player": [
          {
            "condition": "minecraft:entity_properties",
            "entity": "this",
            "predicate": {
              "type_specific": {
                "type": "player",
                "advancements": {
                  "gm4:custom_crafters": true
                }
              }
            }
          }
        ]
      }
    },
    "open_custom_crafter": {
      "trigger": "minecraft:item_used_on_block",
      "conditions": {
        "location": [
          {
            "condition": "minecraft:location_check",
            "predicate": {
              "block": {
                "blocks": [
                  "minecraft:dropper"
                ],
                "nbt": "{CustomName:'{\"translate\":\"gm4.second\",\"fallback\":\"%1$s\",\"with\":[{\"translate\":\"container.gm4.custom_crafter\",\"fallback\":\"Custom Crafter\"},{\"font\":\"gm4:half_invert\",\"extra\":[{\"font\":\"gm4:half_invert\",\"translate\":\"container.gm4.custom_crafter\",\"fallback\":\"Custom Crafter\"},{\"font\":\"gm4:offscreen\",\"translate\":\"container.gm4.custom_crafter\",\"fallback\":\"Custom Crafter\"},{\"color\":\"white\",\"font\":\"gm4:container_gui\",\"translate\":\"gui.gm4.custom_crafter\",\"fallback\":\"\"},{\"font\":\"gm4:half_invert\",\"text\":\" \"},{\"font\":\"gm4:half_invert\",\"translate\":\"container.gm4.custom_crafter\",\"fallback\":\"Custom Crafter\"},{\"color\":\"#404040\",\"font\":\"gm4:default\",\"translate\":\"container.gm4.custom_crafter\",\"fallback\":\"Custom Crafter\"}],\"text\":\" \"}]}'}"
              }
            }
          }
        ]
      }
    },
    "obtain_obsidian": {
      "trigger": "minecraft:inventory_changed",
      "conditions": {
        "items": [
          {
            "items": [
              "minecraft:obsidian"
            ]
          }
        ]
      }
    },
    "obtain_piston": {
      "trigger": "minecraft:inventory_changed",
      "conditions": {
        "items": [
          {
            "items": [
              "minecraft:piston"
            ]
          }
        ]
      }
    },
    "obtain_block_compressor": {
      "trigger": "minecraft:inventory_changed",
      "conditions": {
        "items": [
          {
            "items": [
              "minecraft:player_head"
            ],
            "nbt": "{gm4_machines:{id:\"block_compressor\"}}"
          }
        ]
      }
    },
    "open_block_compressor": {
      "trigger": "minecraft:item_used_on_block",
      "conditions": {
        "location": [
          {
            "condition": "minecraft:location_check",
            "predicate": {
              "block": {
                "blocks": [
                  "minecraft:dropper"
                ],
                "nbt": "{CustomName:'{\"translate\":\"gm4.second\",\"fallback\":\"%1$s\",\"with\":[{\"translate\":\"container.gm4.block_compressor\",\"fallback\":\"Compression Amount\"},{\"font\":\"gm4:half_invert\",\"extra\":[{\"font\":\"gm4:half_invert\",\"translate\":\"container.gm4.block_compressor\",\"fallback\":\"Compression Amount\"},{\"font\":\"gm4:offscreen\",\"translate\":\"container.gm4.block_compressor\",\"fallback\":\"Compression Amount\"},{\"color\":\"white\",\"font\":\"gm4:container_gui\",\"translate\":\"gui.gm4.block_compressor\",\"fallback\":\"\"},{\"font\":\"gm4:half_invert\",\"text\":\" \"},{\"font\":\"gm4:half_invert\",\"translate\":\"container.gm4.block_compressor\",\"fallback\":\"Compression Amount\"},{\"color\":\"#404040\",\"font\":\"gm4:default\",\"translate\":\"container.gm4.block_compressor\",\"fallback\":\"Compression Amount\"}],\"text\":\" \"}]}'}"
              }
            }
          }
        ]
      }
    }
  },
  "sections": [
    {
      "name": "description",
      "enable": [],
      "requirements": [
        [
          "create_custom_crafter",
          "open_custom_crafter"
        ]
      ],
      "pages": [
        [
          {
            "insert": "title"
          },
          {
            "translate": "text.gm4.guidebook.block_compressors.1",
            "fallback": "Block Compressors can be used to cut down on bulk storage. Item stacks can be compressed into a single item, and vice versa."
          }
        ]
      ]
    },
    {
      "name": "crafting",
      "enable": [],
      "requirements": [
        [
          "obtain_obsidian",
          "obtain_piston"
        ]
      ],
      "pages": [
        [
          {
            "translate": "text.gm4.guidebook.block_compressors.2",
            "fallback": "A Block Compressor can be crafted in a Custom Crafter:"
          },
          "\n",
          {
            "insert": "recipe",
            "recipe": "gm4_block_compressors:block_compressor"
          }
        ]
      ],
      "prerequisites": [
        "description"
      ]
    },
    {
      "name": "usage",
      "enable": [],
      "requirements": [
        [
          "open_block_compressor",
          "open_block_compressor"
        ]
      ],
      "pages": [
        [
          {
            "translate": "text.gm4.guidebook.block_compressors.3",
            "fallback": "To select the amount of compression, put that amount of items inside the block compressor, then drop the items on top of the compressor.\n\nPutting 1 item in the compressor will decompress any items on top."
          }
        ]
      ],
      "grants": [
        "crafting"
      ]
    }
  ]
}
